{
	"name": "@auth/backend",
	"author": "FLighter",
	"license": "CC BY-NC-ND 4.0",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"dev": "tsx watch --exclude \"./src/generated/**/*\" --env-file=.env.development ./src/index.ts --",
		"build": "pnpm prisma:generate && tsx --env-file=.env.production esbuild.config.ts",
		"start": "node --env-file=.env.production dist/index.js",
		"prisma:generate": "pnpm prisma:generate:pg && pnpm prisma:generate:mongo && pnpm prisma:generate:sqlite",
		"prisma:deploy": "pnpm prisma:deploy:pg && pnpm prisma:deploy:mongo",
		"prisma:migrate": "pnpm prisma:migrate:pg && pnpm prisma:migrate:mongo",
		"prisma:view": "concurrently \"pnpm prisma:view:pg\" \"pnpm prisma:view:mongo\"",
		"prisma:reset": "pnpm prisma:reset:pg && pnpm prisma:reset:mongo",
		"prisma:generate:pg": "dotenv -e .env.production -- npx prisma generate --schema ./prisma/postgres/schema.prisma --config ./prisma/postgres/prisma.config.ts",
		"prisma:generate:mongo": "dotenv -e .env.production -- npx prisma generate --schema ./prisma/mongo/schema.prisma --config ./prisma/mongo/prisma.config.ts",
		"prisma:generate:sqlite": "dotenv -e .env.production -- npx prisma generate --schema ./prisma/sqlite/schema.prisma --config ./prisma/sqlite/prisma.config.ts",
		"prisma:deploy:pg": "dotenv -e .env.production -- npx prisma migrate deploy --schema ./prisma/postgres/schema.prisma --config ./prisma/postgres/prisma.config.ts",
		"prisma:deploy:mongo": "dotenv -e .env.production -- npx prisma db push --schema ./prisma/mongo/schema.prisma --config ./prisma/mongo/prisma.config.ts",
		"prisma:deploy:sqlite": "dotenv -e .env.production -- npx prisma db push --schema ./prisma/sqlite/schema.prisma --config ./prisma/sqlite/prisma.config.ts",
		"prisma:migrate:pg": "dotenv -e .env.development -- npx prisma migrate dev --schema ./prisma/postgres/schema.prisma --config ./prisma/postgres/prisma.config.ts",
		"prisma:migrate:mongo": "dotenv -e .env.development -- npx prisma db push --schema ./prisma/mongo/schema.prisma --config ./prisma/mongo/prisma.config.ts",
		"prisma:view:pg": "dotenv -e .env.development -- npx prisma studio --schema ./prisma/postgres/schema.prisma --config ./prisma/postgres/prisma.config.ts --port 5555",
		"prisma:view:mongo": "dotenv -e .env.development -- npx prisma studio --schema ./prisma/mongo/schema.prisma --config ./prisma/mongo/prisma.config.ts --port 5556",
		"prisma:reset:pg": "dotenv -e .env.development -- npx prisma migrate reset --schema ./prisma/postgres/schema.prisma --config ./prisma/postgres/prisma.config.ts",
		"prisma:reset:mongo": "dotenv -e .env.development -- npx prisma migrate reset --schema ./prisma/mongo/schema.prisma --config ./prisma/mongo/prisma.config.ts"
	},
	"devDependencies": {
		"@types/cookie-parser": "^1.4.8",
		"@types/express": "^5.0.1",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/node": "^22.14.0",
		"@types/pg": "^8.15.6",
		"@types/randomatic": "^3.1.5",
		"concurrently": "^9.2.1",
		"dotenv-cli": "^11.0.0",
		"esbuild": "^0.25.2",
		"jest": "^29.7.0",
		"prisma": "^6.19.0",
		"ts-jest": "^29.3.1",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@noble/hashes": "^1.7.1",
		"@prisma/adapter-pg": "^7.0.1",
		"@prisma/client": "^6.19.0",
		"@shared/backend": "link:../../../shared/shared-backend",
		"cookie-parser": "^1.4.7",
		"execa": "^9.6.1",
		"express": "^5.1.0",
		"joi": "^17.13.3",
		"jsonwebtoken": "^9.0.2",
		"mongodb-memory-server": "^10.4.1",
		"pg": "^8.16.3",
		"randomatic": "^3.1.1",
		"shared": "link:../auth-shared"
	}
}
